@page
@model LoginModel

@{
    ViewData["Title"] = "Connectez-vous";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h4>Utilisez vos identifiants pour vous connecter : </h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label>E-mail</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <small id="Input.Password" class="form-text text-muted">super admin = eljefe@nurse.fr | nurse = lolalopez@nurse.fr | patient = estoymalito@patient.fr</small>
                </div>
                <div class="form-group">
                    <label >Mot de passe</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <small id="Input.Password" class="form-text text-muted">mdp = Superpassword.0</small>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Vous avez oublié votre mot de passe ?</a>
                    </p>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label >
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayName("Enregistrer les informations ?")
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Connexion</button>
                </div>
                <div class="form-group">
                    @*<p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Vous avez oublié votre mot de passe ?</a>
                    </p>*@
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Vous n'avez pas de compte ? Inscrivez-vous !</a>
                    </p>
                    @*<p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Renvoi d'email de confirmation</a>
                    </p>*@
                </div>
            </form>
        </section>
    </div>
